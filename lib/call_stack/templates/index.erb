<html>
<head>
  <link type='text/css' rel='stylesheet' href='/stylesheets/call_stack.css'>
  <script type='text/javascript' src='/javascripts/jquery-1.3.2.min.js'></script>
</head>
<body>
  <p><strong>Ruby call stack:</strong></p>
  <div id='target'></div>
  
  <script>
    function connect() {
      jQuery.get('/call_stack/request?' + new Date().getTime(), function(data) {
        $('#target').append(data);
        connect();
      });
    }
    connect(); 
  </script>
</body>
</html>
